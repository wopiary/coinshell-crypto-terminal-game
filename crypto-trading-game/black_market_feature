                    return black_market_page_crypto_coin()
                time.sleep(2)
                return black_market_page_crypto_coin()
            elif black_market_page_crypto_coin_purchase_coin_page_receipt_coinnconfirmation == 'n':
                 print('❌ Transaction cancelled!')
                 time.sleep(2)
                 return black_market_page_crypto_coin()
            else:
                 print('❌ Command Unavailable!')
                 time.sleep(2)
